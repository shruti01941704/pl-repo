    <script>
   let currentSlideIndex = 0;
let slides = document.querySelectorAll(".carousel-images img");

function moveSlide() {
    currentSlideIndex++;
    
    if (currentSlideIndex >= slides.length) {
        currentSlideIndex = 0; // Reset to the first image after the last one
    }

    updateCarousel();
}

function updateCarousel() {
    const carouselImages = document.querySelector(".carousel-images");
    carouselImages.style.transform = `translateX(-${currentSlideIndex * 100}%)`;
}

// Auto-slide feature (every 5 seconds)
let autoSlide = setInterval(moveSlide, 5000);

// Update carousel initially
updateCarousel();
// Array to keep track of the items in the cart
// Array to keep track of the items in the cart
let cart = [];

// Function to toggle products in and out of the cart
function toggleCart(productName, imageSrc) {
    const index = cart.findIndex(item => item.name === productName);

    if (index === -1) {
        // Add product to the cart
        cart.push({ name: productName, image: imageSrc });
        alert(productName + ' has been added to your cart!');
    } else {
        // Remove product from the cart
        cart.splice(index, 1);
        alert(productName + ' has been removed from your cart!');
    }

    updateCartUI();
}

// Function to update the cart icon and dropdown with the current cart items
function updateCartUI() {
    // Update the cart count
    document.getElementById('cart-count').textContent = cart.length;

    // Update the cart dropdown menu
    const cartItemsList = document.getElementById('cart-items-list');
    cartItemsList.innerHTML = ''; // Clear current list

    cart.forEach((item) => {
        const li = document.createElement('li');
        
        // Create a container for the image and text
        const itemImage = document.createElement('img');
        itemImage.src = item.image;
        itemImage.alt = item.name;
        
        const itemText = document.createElement('span');
        itemText.textContent = item.name;
        
        // Append image and text to the list item
        li.appendChild(itemImage);
        li.appendChild(itemText);

        cartItemsList.appendChild(li);
    });
}

// Toggle cart dropdown menu visibility
function toggleCartMenu() {
    const cartMenu = document.getElementById('cart-menu');
    cartMenu.classList.toggle('show');
}


